<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <ImageView
        android:layout_width="@dimen/message_icon_size"
        android:layout_height="@dimen/message_icon_size"
        android:id="@+id/messageIcon"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/message_margin_top"
        android:layout_marginBottom="@dimen/message_margin_bottom"
        android:src="@drawable/ic_action_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/messageLabel"
        android:layout_marginLeft="@dimen/message_label_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/messageIcon"
        android:layout_toEndOf="@+id/messageIcon" />
</RelativeLayout>
